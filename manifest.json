{
  "manifest_version": 2,
  "name": "Tripidee Button for Chrome",
  "version": "1.6.7",
  "description": "This extension allows you to quickly add to your Tripidee trips.",
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"    
  },
  "author": "Tripidee",
  "browser_action": {
    "default_icon": "icon-16x16.png",
    "default_title": "Add to Tripidee"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "homepage_url": "https://www.tripidee.com",
  "short_name": "Tripidee Button"
}
