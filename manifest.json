{
  "manifest_version": 2,

  "name": "Tripidee",
  "description": "This extension allows you to quickly add to your Tripidee trips.",
  "version": "1.6.3",
  "icons": {
    "16": "icon-16x16.png",
    "48": "icon-48x48.png",
    "128": "icon-128x128.png"    
  },
  "author": "Tripidee",
  "browser_action": {
    "default_icon": "icon-16x16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
